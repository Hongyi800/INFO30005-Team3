extends default

block content
    div.main
        div
            h3 Add comment
            form(method='POST' action='/comment/' + username)
                div
                    label(for='username') username:
                    input(type='text', placeholder='username' name='username' id='username' value="")
                div
                    label(for='content') comment:
                    input(type='text', placeholder='content' name='content' id='content' value="")

                button(type='submit') Add

    </div>